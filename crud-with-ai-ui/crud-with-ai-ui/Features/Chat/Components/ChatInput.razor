<div class="card shadow-sm">
    <div class="card-body">
        <div class="input-group">
            <InputText class="form-control" @ref="_inputTextRef" @bind-Value="_message" placeholder="Type your message..." disabled="@_isLoading" @onkeypress="@HandleKeyPress" />
            <button class="btn btn-primary" type="button" disabled="@IsSendDisabled" @onclick="HandleSubmit">@(_isLoading ? "Sending..." : "Send")</button>
            <button class="btn btn-outline-secondary" type="button" @onclick="HandleClearAsync">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                </svg>
            </button>
        </div>
    </div>
</div>

@code {

    [Parameter, EditorRequired]
    public EventCallback<string> OnSend { get; set; }
    [Parameter, EditorRequired]
    public EventCallback OnClear { get; set; }

    [Parameter, EditorRequired]
    public bool IsLoading
    {
        get => _isLoading;
        set => _isLoading = value;
    }

    private bool _isLoading;
    private string _message = string.Empty;
    private InputText? _inputTextRef;

    private bool IsSendDisabled => _isLoading || string.IsNullOrWhiteSpace(_message);

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey && !IsSendDisabled)
        {
            await HandleSubmit();
        }
    }

    private async Task HandleSubmit()
    {
        if (IsSendDisabled)
        {
            return;
        }

        var message = _message.Trim();
        _message = string.Empty;

        await OnSend.InvokeAsync(message);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (_inputTextRef?.Element is not null)
            {
                await _inputTextRef.Element.Value.FocusAsync();
            }
        }
    }

    private Task HandleClearAsync()
        => OnClear.InvokeAsync();
}
